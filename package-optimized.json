{
  "name": "certichain-server",
  "version": "1.0.0",
  "description": "CertiChain Backend API - High Performance Blockchain Certificate Verification System",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "prod": "NODE_ENV=production node app.js",
    "cluster": "NODE_ENV=production pm2 start ecosystem.config.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node utils/seed.js",
    "migrate": "node utils/migrate.js",
    "backup": "node utils/backup.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "keywords": [
    "blockchain",
    "certificate",
    "verification",
    "nft",
    "ethereum",
    "education",
    "background-check",
    "high-performance"
  ],
  "author": "CertiChain Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "qrcode": "^1.5.3",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1450.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "pm2": "^5.3.0",
    "@types/node": "^20.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pm2": {
    "instances": "max",
    "exec_mode": "cluster"
  }
}